# Server Configuration
NODE_ENV=development
PORT=3000

# PostgreSQL Configuration
# Update these with your PostgreSQL database credentials
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=geopulse
POSTGRES_USER=postgres
POSTGRES_PASSWORD=pass1

# MongoDB Configuration
# Update this with your MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/geopulse

# JWT Configuration
# IMPORTANT: Change this to a strong, random secret key in production
# You can generate a secure key using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
# Update this with your frontend URL
# For development: http://localhost:3000 or *
# For production: https://yourdomain.com
CORS_ORIGIN=http://localhost:3000

# Swagger Configuration
SWAGGER_HOST=localhost:3000
SWAGGER_SCHEMES=http

